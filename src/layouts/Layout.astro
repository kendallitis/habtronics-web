---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" type="image/x-icon">
		<meta name="generator" content={Astro.generator} />
		<title>habtronics</title>
		<link href="https://fonts.googleapis.com/css2?family=Sora&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
	</head>
	<body class="h-full bg-white scroll-smooth">
		<Navigation />
		<div class={`bg-white pt-20 pb-10 min-h-screen ${Astro.props.class ?? ''}`}>
			<slot />
		</div>
		<Footer />
		<script src="https://unpkg.com/alpinejs" defer></script>
	</body>
</html>